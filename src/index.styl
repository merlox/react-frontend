body
    font-family: sans-serif
    background-color: whitesmoke

.hidden
    display: none

.spinner
    margin: 50px auto
    width: 100px
    grid-column: 1 / 3

.main-container
    display: grid
    justify-content: center
    margin: auto
    grid-template-columns: repeat(2, 1fr)

    .title
        font-size: 40pt
        grid-column: 1 / 3
        justify-self: center
        font-family: 'Lato', sans-serif
        padding: 100px 0
        letter-spacing: 7px
        font-weight: 100

    .filter
        grid-column: 1 / 3
        font-size: 15pt
        justify-self: center
        font-family: 'Lato', sans-serif
        letter-spacing: 7px
        font-weight: 400
        margin-bottom: 30px
        display: grid
        grid-template-columns: auto auto auto auto 1fr
        justify-items: center
        align-items: center

        div
            margin: 0 20px

        select
            font-size: 18pt

    .users-container
        grid-template-columns: repeat(3, 1fr)
        grid-column: 1 / 3
        display: grid
        justify-items: center

        .user
            display: grid
            grid-row-gap: 20px
            grid-template-rows: auto auto auto auto auto 1fr
            width: 300px
            box-shadow: 0 0 60px 0 lightgrey
            padding: 50px 80px
            margin-bottom: 40px
            border-radius: 10px

            h3
                font-family: 'Open Sans', sans-serif
                font-size: 20pt
                margin-top: 0

            .image-cropper
                width: 200px
                height: 200px
                position: relative
                overflow: hidden
                border-radius: 50%
                margin: auto

                img
                    width: auto
                    margin: 0 auto
                    height: 150%

            .hair-color
                text-align: center
                font-weight: bold

            .measurements
                display: flex
                justify-content: space-around

            .lists
                margin-top: 20px

                > div
                    font-size: 10pt
                    letter-spacing: 5px
                    text-align: center
                    margin-bottom: 10px

                ul
                    list-style-type: none
                    padding-left: 0
                    text-align: center
                    margin: 0

                    li
                        border: 1px solid grey
                        border-radius: 50px
                        padding: 10px
                        display: inline-block
                        margin: 5px
                        cursor: default

                        &:hover
                            background-color: grey
                            color: white


@media(max-width: 1450px)
    .main-container
        .users-container
            grid-template-columns: repeat(2, 1fr)

@media(max-width: 950px)
    .main-container
        .users-container
            grid-template-columns: 1fr
