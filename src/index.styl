body
    font-family: sans-serif
    background-color: whitesmoke

.main-container
    display: grid
    justify-content: center
    margin: auto
    grid-template-columns: repeat(2, 1fr)

    .title
        font-size: 40pt
        grid-column: 1 / 3
        justify-self: center
        font-family: 'Lato', sans-serif
        padding: 100px 0
        letter-spacing: 7px

    .users-container
        grid-column: 1 / 3
        display: grid
        justify-items: center

        > :nth-child(even)
            grid-column: 2 / 3

        .user
            display: grid
            grid-row-gap: 10px
            width: 300px
            box-shadow: 0 0 60px 0 lightgrey
            padding: 50px 80px
            margin-bottom: 40px
            border-radius: 10px

            h3
                font-family: 'Open Sans', sans-serif
                font-size: 20pt

            .image-cropper
                width: 200px
                height: 200px
                position: relative
                overflow: hidden
                border-radius: 50%
                margin: auto

                img
                    width: auto
                    margin: 0 auto
                    height: 150%
